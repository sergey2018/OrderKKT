<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.sergey.root.orderkkt.tcp.TcpDeviceSearchViewModel" />

        <variable
            name="activity"
            type="com.sergey.root.orderkkt.tcp.TcpDeviceSearchActivity" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.sergey.root.orderkkt.tcp.TcpDeviceSearchActivity">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:items="@{vm.devices}"
            app:onItemClicked="@{(i)->vm.onItemSelected(activity, i)}"/>


    </LinearLayout>
</layout>